<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.khalk.network">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.khalk.network.NetworkItemsActivity"
            android:label="@string/networkActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.khalk.network.SettingsActivity"
            android:label="@string/settings_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.khalk.network.NetworkItemsActivity"/>
        </activity>
        <activity
            android:name="com.example.khalk.network.EditorActivity"
            android:label="@string/editor_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.khalk.network.NetworkItemsActivity"/>
        </activity>

        <provider
            android:name=".data.TestCaseProvider"
            android:authorities="com.example.khalk.network"
            android:exported="false" />

    </application>

</manifest>